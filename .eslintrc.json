{
  "root": true,
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "jest": true,
    "node": true,
    "es6": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "indent": [
      "error",
      2
    ],
    "eqeqeq": "error",
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "camelcase": "error",
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "array-bracket-spacing": [
      "error",
      "always"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "key-spacing": [
      "error",
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "max-len": [
      "warn",
      {
        "code": 80,
        "comments": 65,
        "ignoreUrls": true
      }
    ]
  },
  "ignorePatterns": [
    "node_modules",
    "vendor",
    "dist",
    "demo"
  ]
}
